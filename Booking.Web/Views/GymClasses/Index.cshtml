@model IndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p id="createajax"></p>

@if (User.IsInRole("Admin"))
{
    <p>
        <button id="ajax" class="btn btn-danger">Ajax Test</button>
        <a asp-action="Create">Create New</a>
    </p>

    <p>
        <a asp-action="Create" class="btn btn-info"
           data-ajax="true"
           data-ajax-method="GET"
           data-ajax-update="#createajax"
           data-ajax-mode="replace">Add with ajax</a>
    </p>

}

@if (User.IsInRole("Member"))
{
    <form asp-action="Index">
        <dl class="row">
            <dt class="col-sm-10">History</dt>
            <dd class="col-sm-2">
                <input class="form-control" type="checkbox" asp-for="ShowHistory" id="checkbox"/>
            </dd>
        </dl>
    </form>
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GymClasses.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GymClasses.First().StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GymClasses.First().Duration)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="gymclasses">
       <partial name="GymClassesPartial"/>
    </tbody>
</table>
